    <script>
        //var printButton = document.getElementById("printButton");

        // Add a click event listener to the print button
        $(".orderid").click(function () {
            // Get the weight value from the input field
            var weight = $(".weighhht").val();

            // Check if weight is null or empty
            if (weight == null || weight == "") {
                // If weight is null or empty, open the modal
                var modal = document.getElementById("WeightModal");
                modal.style.display = "block";
            }
        });


       

        // Get the <span> element that closes the modal
        var weightspan = document.getElementsByClassName("weightclose")[0];
        var modal = document.getElementById("WeightModal");
        // When the user clicks the button, open the modal
      

        // When the user clicks on <span> (x), close the modal
        weightspan.onclick = function () {
            modal.style.display = "none";
        }

        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }


    </script>

